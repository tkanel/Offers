@model IEnumerable<Offers.Models.Offer>

@{
    ViewData["Title"] = "Index";
}

<h4>Λίστα προσφορών</h4>
<hr />
<p>
    <a class="btn btn-info" asp-action="Create">Νέα προσφορά</a>
</p>

<table class="table  table-bordered  table-hover table-striped">
    <thead class="table table-dark">
        <tr>
            <th>
                @Html.Label("ΕΤΑΙΡΙΑ")
            </th>
            <th>
                @Html.Label("ΑΡΧΕΙΟ ΠΡΟΣΦΟΡΑΣ")
            </th>
            <th>
                @Html.Label("ΕΞΤΡΑ ΑΡΧΕΙΟ")
            </th>
            <th>
                @Html.Label("ΑΝΟΙΚΤΗ?")
            </th>
            <th>
                @Html.Label("ΣΗΜΕΙΩΣΕΙΣ")
            </th>
            <th>
                @Html.Label("ΗΜΕΡΟΜΗΝΙΑ ΤΕΛΕΥΤΑΙΑΣ ΕΝΗΜΕΡΩΣΗΣ")
            </th>
            <th>
                @Html.Label("ΧΡΗΣΤΗΣ")
            </th>
            <th>
                @Html.Label("ΕΤΟΣ")
            </th>
            <th>
                @Html.Label("ΔΡΟΜΟΛΟΓΙΟ")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Company.CompanyName)
                </td>
                <td>

                    @if (item.FileName != null)
                    {




                        string attachmentFileName = item.FileName;
                        string yearSelected = item.Year.YearSelected;



                        <a href='~/Files/@yearSelected/@attachmentFileName' target="_blank">@attachmentFileName</a>


                    }


                </td>
                <td>

                    @if (item.AdditionalFileName != null)
                    {




                        string attachmentFileName = item.AdditionalFileName;
                        string yearSelected = item.Year.YearSelected;



                        <a href='~/Files/@yearSelected/@attachmentFileName' target="_blank">@attachmentFileName</a>


                    }
                    else
                    {
                        @Html.Label("no extra file")

                    }


                </td>
                <td>
                    <a href="">@Html.DisplayFor(modelItem => item.OpenClose)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastUpdate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ΟfferUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year.YearSelected)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dromologio.Description)
                </td>
                <td>
                    <partial name="_tableButtons" model="item" />
                </td>
            </tr>
        }
    </tbody>
</table>

